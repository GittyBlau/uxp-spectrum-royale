<view:DemoPane xmlns:fx="http://ns.adobe.com/mxml/2009"
  xmlns:view="view.*" xmlns:sp="library://ns.unhurdle.com/spectrum"
  xmlns="library://ns.apache.org/royale/html" xmlns:comp="view.components.*"
  title="Color Slider">
  <fx:Script>
    <![CDATA[
      [Bindable]public var provider:Array = ["red","yellow"];
      [Bindable]public var provider1:Array = ["rgb(255,0,0)"," rgb(0,255,0)"," rgb(0,0,255)"];
    ]]>
  </fx:Script>
  <comp:Variant>
    <sp:ColorSlider/>
    <Br/>
    <sp:ColorSlider colorStops="{provider}"/>
    <Br/>
    <sp:ColorSlider colorStops="{provider1}"/>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='&lt;sp:ColorSlider/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;Br/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;sp:ColorSlider colorStop="{provider}"/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;Br/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;sp:ColorSlider colorStop="{provider1}"/&gt;'/>
  </comp:Markup>
  
  <comp:Variant header="Alpha">
    <sp:AlphaColorSlider/>
    <Br/>
    <sp:AlphaColorSlider colorStyle="green"/>
    <Br/>
    <sp:AlphaColorSlider colorStyle="rgb(255,0,0)"/>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='&lt;sp:AlphaColorSlider/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;Br/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;sp:AlphaColorSlider color="green"/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;Br/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;sp:AlphaColorSlider color="rgb(255,0,0)"/&gt;'/>
  </comp:Markup>
  
  <comp:Variant header="Disabled">
    <sp:ColorSlider disabled="true"/>
    <Br/>
    <sp:AlphaColorSlider disabled="true"/>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='&lt;sp:ColorSlider disabled="true"/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;Br/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;sp:AlphaColorSlider disabled="true"/&gt;'/>
  </comp:Markup>
  
  <comp:Variant header="Vertical">
    <Div>
      <sp:ColorSlider vertical="true" style="margin-right: 10px;"/>
      <sp:AlphaColorSlider vertical="true"/>
    </Div>
  </comp:Variant>
  <comp:Markup>
    <comp:StyledCode text='&lt;Div&gt;'/>
    <Br/>
    <comp:StyledCode text=' &lt;sp:ColorSlider vertical="true" style="margin-right: 10px;"/&gt;'/>
    <Br/>
    <comp:StyledCode text=' &lt;sp:AlphaColorSlider vertical="true"/&gt;'/>
    <Br/>
    <comp:StyledCode text='&lt;/Div&gt;'/>
  </comp:Markup>
  
</view:DemoPane>